<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:orientation="vertical"
              android:layout_height="match_parent">

    <LinearLayout
            android:background="@drawable/stroke_soild"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:padding="5dp"
                android:layout_width="wrap_content"
                android:textColor="#333"
                android:text="红绿灯设置"
                android:textSize="20sp"
                android:textStyle="normal"
                android:singleLine="true"
                android:layout_height="wrap_content" />

    </LinearLayout>


    <LinearLayout
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:layout_width="wrap_content"
                android:textColor="#333"
                android:text="红灯周期："
                android:textSize="16sp"
                android:textStyle="bold"
                android:singleLine="true"
                android:layout_height="wrap_content" />

        <EditText
                android:layout_width="200dp"
                android:singleLine="true"
                android:maxLength="2"
                android:layout_height="wrap_content" 
                android:id="@+id/dia_red"/>

        <TextView
                android:layout_width="wrap_content"
                android:textColor="#333"
                android:text=" 秒"
                android:textSize="16sp"
                android:textStyle="bold"
                android:singleLine="true"
                android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:layout_width="wrap_content"
                android:textColor="#333"
                android:text="黄灯周期："
                android:textSize="16sp"
                android:textStyle="bold"
                android:singleLine="true"
                android:layout_height="wrap_content" />

        <EditText
                android:layout_width="200dp"
                android:singleLine="true"
                android:maxLength="2"
                android:layout_height="wrap_content" android:id="@+id/dia_yellow"/>

        <TextView
                android:layout_width="wrap_content"
                android:textColor="#333"
                android:text=" 秒"
                android:textSize="16sp"
                android:textStyle="bold"
                android:singleLine="true"
                android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:layout_width="wrap_content"
                android:textColor="#333"
                android:text="绿灯周期："
                android:textSize="16sp"
                android:textStyle="bold"
                android:singleLine="true"
                android:layout_height="wrap_content"/>

        <EditText
                android:layout_width="200dp"
                android:singleLine="true"
                android:maxLength="2"
                android:layout_height="wrap_content" android:id="@+id/dia_green"/>

        <TextView
                android:layout_width="wrap_content"
                android:textColor="#333"
                android:text=" 秒"
                android:textSize="16sp"
                android:textStyle="bold"
                android:singleLine="true"
                android:layout_height="wrap_content"/>

    </LinearLayout>


    <LinearLayout
            android:gravity="center"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">


        <TextView
                android:text="确定"
                android:textStyle="bold"
                android:gravity="center"
                android:background="#ccc"
                android:layout_width="120dp"
                android:layout_height="33dp" android:id="@+id/dia_ok"/>


        <TextView
                android:text="取消"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginLeft="30dp"
                android:background="#ccc"
                android:layout_width="120dp"
                android:layout_height="33dp" android:id="@+id/dia_cancel"/>


    </LinearLayout>

</LinearLayout>
